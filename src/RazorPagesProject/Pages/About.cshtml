@page
@model AboutModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    ViewData["Description"] = Localizer["PageDescription"];
}

<div class="about-page">
    <div class="hero-section mb-5">
        <h1 class="display-4 text-primary">@Localizer["ApplicationTitle"]</h1>
        <p class="lead text-muted">@Localizer["IntroductionText"]</p>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <section class="mb-5">
                <h2 class="h3 mb-3">@Localizer["PurposeHeader"]</h2>
                <p class="text-justify">@Localizer["PurposeText"]</p>
            </section>

            <section class="mb-5">
                <h2 class="h3 mb-3">@Localizer["FeaturesHeader"]</h2>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="feature-card p-3 border rounded">
                            <h4 class="h6 text-primary mb-2">
                                <i class="fas fa-comments me-2"></i>Message System
                            </h4>
                            <p class="small mb-0">@Localizer["MessageSystemFeature"]</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="feature-card p-3 border rounded">
                            <h4 class="h6 text-primary mb-2">
                                <i class="fab fa-github me-2"></i>GitHub Explorer
                            </h4>
                            <p class="small mb-0">@Localizer["GitHubProfileFeature"]</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="feature-card p-3 border rounded">
                            <h4 class="h6 text-primary mb-2">
                                <i class="fas fa-user-shield me-2"></i>Authentication
                            </h4>
                            <p class="small mb-0">@Localizer["AuthenticationFeature"]</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="feature-card p-3 border rounded">
                            <h4 class="h6 text-primary mb-2">
                                <i class="fas fa-globe me-2"></i>Multilingual
                            </h4>
                            <p class="small mb-0">@Localizer["MultilingualFeature"]</p>
                        </div>
                    </div>
                </div>
            </section>

            <section class="mb-5">
                <h2 class="h3 mb-3">@Localizer["TechStackHeader"]</h2>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <strong>@Localizer["FrameworkTech"]</strong>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <strong>@Localizer["WebTech"]</strong>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <strong>@Localizer["DatabaseTech"]</strong>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <strong>@Localizer["IdentityTech"]</strong>
                    </li>
                </ul>
            </section>
        </div>

        <div class="col-lg-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h3 class="h4 card-title">@Localizer["TestingHeader"]</h3>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">
                            <i class="fas fa-flask text-info me-2"></i>
                            <small><strong>@Localizer["UnitTestsInfo"]</strong></small>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-cogs text-info me-2"></i>
                            <small><strong>@Localizer["IntegrationTestsInfo"]</strong></small>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-robot text-info me-2"></i>
                            <small><strong>@Localizer["E2ETestsInfo"]</strong></small>
                        </li>
                    </ul>

                    <h4 class="h5">@Localizer["SecurityHeader"]</h4>
                    <p class="small text-muted">@Localizer["SecurityInfo"]</p>
                    
                    <div class="mt-3">
                        <a href="/" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-home me-1"></i>Try Message System
                        </a>
                        <a href="/GitHubProfile" class="btn btn-outline-primary btn-sm">
                            <i class="fab fa-github me-1"></i>GitHub Explorer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.about-page .hero-section {
    text-align: center;
    padding: 2rem 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 10px;
    margin-bottom: 2rem;
}

.about-page .feature-card {
    height: 100%;
    transition: transform 0.2s ease-in-out;
}

.about-page .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.about-page .text-justify {
    text-align: justify;
}

@@media (max-width: 768px) {
    .about-page .hero-section {
        padding: 1rem;
    }
    
    .about-page .display-4 {
        font-size: 1.8rem;
    }
}
</style>
