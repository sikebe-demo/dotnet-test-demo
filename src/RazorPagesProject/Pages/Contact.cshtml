@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h1 class="page-title">
    <i class="fas fa-envelope me-2"></i>@ViewData["Title"]
</h1>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-building me-2"></i>Office Address
                </h3>
            </div>
            <div class="card-body">
                <h2>@Model.Message</h2>
                <address>
                    <i class="fas fa-map-marker-alt me-2"></i>One Microsoft Way<br />
                    Redmond, WA 98052-6399<br />
                    <abbr title="Phone">P:</abbr>
                    425.555.0100
                </address>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-phone me-2"></i>Contact Information
                </h3>
            </div>
            <div class="card-body">
                <address>
                    <div class="mb-3">
                        <strong><i class="fas fa-life-ring me-2"></i>Support:</strong> 
                        <a href="mailto:Support@example.com">Support@example.com</a>
                    </div>
                    <div class="mb-3">
                        <strong><i class="fas fa-bullhorn me-2"></i>Marketing:</strong> 
                        <a href="mailto:Marketing@example.com">Marketing@example.com</a>
                    </div>
                </address>
                <div class="mt-4">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
