@page
@model IndexModel
@{
    ViewData["Title"] = "Message System";
}

<h1 class="page-title">
    <i class="fas fa-comments me-2"></i>@ViewData["Title"]
</h1>

<input id="quote" type="hidden" value="@Model.Quote">

<form id="addMessage" method="post">
    <div class="card fade-in">
        <div class="card-header">
            <h3 class="card-title mb-0">
                <i class="fas fa-plus-circle me-2"></i>Add a message
            </h3>
        </div>
        <div class="card-body">
            <div class="form-group mb-3">
                <label asp-for="Message.Text" class="form-label fw-bold">Message</label>
                <input id="newMessage" asp-for="Message.Text" class="form-control" style="width:100%" placeholder="Enter your message here...">
                <span asp-validation-for="Message.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="addMessageBtn" type="submit" asp-page-handler="AddMessage" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i>Add Message
                </button>
            </div>
        </div>
    </div>
</form>

<form id="messages" method="post">
    <div class="card mt-4 fade-in">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Messages
                </h3>
                <button id="deleteAllBtn" type="submit" asp-page-handler="DeleteAllMessages" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Clear All
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Messages is not null && Model.Messages.Any())
            {
                <ul class="list-unstyled">
                    @foreach (var message in Model.Messages)
                    {
                        <li class="d-flex align-items-center mb-3 p-3 bg-light rounded">
                            <button id="deleteBtn@(message.Id)" type="submit" class="btn btn-sm btn-danger me-3" asp-page-handler="DeleteMessage" asp-route-id="@message.Id">
                                <i class="fas fa-times"></i>
                            </button>
                            <span class="message-list flex-grow-1">@message.Text</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <p>No messages yet. Add your first message above!</p>
                </div>
            }
        </div>
    </div>
</form>

<form id="analyze" method="post">
    <div class="card mt-4 fade-in">
        <div class="card-header">
            <h3 class="card-title mb-0">
                <i class="fas fa-chart-bar me-2"></i>Analyze Messages
            </h3>
        </div>
        <div class="card-body">
            <div class="form-group mb-3">
                <button id="analyzeBtn" type="submit" asp-page-handler="AnalyzeMessages" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Analyze
                </button>
            </div>
            @if (!string.IsNullOrEmpty(Model.MessageAnalysisResult))
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    @Model.MessageAnalysisResult
                </div>
            }
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
